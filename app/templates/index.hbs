<div class="container mt-3">

  <div class="row">
    <div class="col">
      <h1>Employee Manager</h1>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-6">

      <EmployeeUpdater @flavour="add" @title="Add employee" @buttonText="Add" />

    </div>
    <div class="col-6">

      <div>
        <TotalSalary @employees={{@model}} />
      </div>
      <div class="mt-3">
        <AverageSalary @employees={{@model}} />
      </div>

    </div>
  </div>

  <div class="row mt-5">
    <div class="col">

      <div class="employees">
          <h4>Employees</h4>

          <table class="table">
              <thead>
                  <tr align="left">
                      <th>Firstname</th>
                      <th>Surname</th>
                      <th>Email</th>
                      <th>Address</th>
                      <th>Salary</th>
                      <th>Edit</th>
                      <th>Delete</th>
                  </tr>
              </thead>

              <tbody>
                  {{#each @model as |employee|}}
                      <EmployeeRow @employee={{employee}} />
                  {{/each}}
              </tbody>
          </table>
      </div>

    </div>
  </div>

</div>